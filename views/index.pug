extends layout

block content
  h1 Are you coming

  div#yes.fakeButtons(type=button) Yes
  div#no.fakeButtons('/icantcome')
    a(href='/icantcome') No

  form.invisible(method="POST")
    label(for='number') How many in your party?
    input#number(type='number', name='number', min=1, required)
    button(type='submit') Submit
  
  script(type='text/javascript', src='/javascripts/home.js')
